{
  "private": true,
  "name": "single-spa-vue-force-dev",
  "version": "0.0.0",
  "description": "A browser extension that forces all vue applications into dev mode. Works well together with single-spa.",
  "author": "David Adamson",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "check:format": "prettier --check --ignore-path .gitignore .",
    "build": "vite build && cd dist && zip -r extension.zip .",
    "postinstall": "patch-package"
  },
  "dependencies": {
    "pinia": "^3.0.2"
  },
  "devDependencies": {
    "@semantic-release/exec": "^7.0.3",
    "patch-package": "^8.0.0",
    "prettier": "^3.5.3",
    "semantic-release": "^24.2.3",
    "vite": "^6.2.6",
    "vite-plugin-web-extension": "^4.4.3",
    "webextension-polyfill": "^0.12.0"
  }
}
